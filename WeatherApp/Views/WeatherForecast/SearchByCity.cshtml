@{
}
@model WeatherApp.Models.SearchByCityModel;

@{
    ViewData["Title"] = "SearchByCity";
}


<div class="container">

    <form method="post">
        <div class="container"> 
            <h2>Search By City</h2>
            <div>

                <input asp-for="CityName" class="form-control" placeholder="Enter City Name"/>
                <button asp-controller="WeatherForecast" asp-action="SearchByCity" class="btn-primary btn-outline-primary">Search</button>
                <span asp-validation-for="CityName" class="text-danger"></span>
            </div>

        </div>

    </form>

</div>